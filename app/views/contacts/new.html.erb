<h1>New Contact</h1>

<%= form_for @contact, :url => { :action => "create" }  do |c|  %>

    <table class="table">
      <tr>
        <td>First Name:</td>
        <td><%= c.text_field  :firstName %> </td>
      </tr>
      <tr>
        <td>Middle Name:</td>
        <td><%= c.text_field  :middleName %></td>
      </tr>
      <tr>
        <td>Last Name:</td>
        <td><%= c.text_field  :lastName %></td>
      </tr>
      <tr>
        <td>Email:</td>
        <td><%= c.email_field  :email %></td>
      </tr>
      <tr>
        <td>Phone Number:</td>
        <td><%= c.text_field  :phoneNumber %></td>
      </tr>
    </table>
    <%= c.submit "Add Contact", class: "btn btn-primary" %>
<%end%>


<%= link_to 'Back', contacts_path %>
